<Window x:Class="MobileAppSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobileAppSim"
        mc:Ignorable="d"
        Title="Mobile App Simulator" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="InputText" Height="173"/>
            <Button x:Name="ReadButton" Click="ReadButton_Click">Read</Button>
            <TextBox x:Name="PostBackText" Height="100"/>
            <Button x:Name="HTTPPostButton" Click="HTTPPostButton_Click">HTTP Post (Web App Test Only)</Button>
        </StackPanel>

    </Grid>
</Window>
